    deps = [
        "//compiler/daml-lf-ast",
        "//compiler/daml-lf-evaluator",
        "//compiler/daml-lf-optimize",
        "//compiler/daml-lf-reader",
        "//libs-haskell/bazel-runfiles",
    ],
