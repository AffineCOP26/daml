da_haskell_repl(
    name = "repl",
    testonly = True,
    visibility = ["//visibility:public"],
    deps = [
        "//compiler/daml-lf-evaluator",
        "//compiler/daml-lf-evaluator:Explore",
        "//compiler/daml-lf-evaluator:HaskellSpeed",
        "//compiler/daml-lf-evaluator:MyIntSpeed",
        "//compiler/daml-lf-evaluator:test",
