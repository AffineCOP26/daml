load("//bazel_tools:haskell.bzl", "da_haskell_binary", "da_haskell_library", "da_haskell_repl", "da_haskell_test")
load("//rules_daml:daml.bzl", "daml_compile")

da_haskell_library(
    name = "daml-lf-evaluator",
    srcs = glob(["src/**/*.hs"]),
    hackage_deps = [
        "base",
        "bytestring",
        "containers",
        "extra",
        "text",
    ],
    src_strip_prefix = "src",
    visibility = ["//visibility:public"],
    deps = [
        "//compiler/daml-lf-ast",
        "//compiler/daml-lf-proto",
        "//compiler/daml-lf-reader",
        "//libs-haskell/da-hs-base",
    ],
)

daml_compile(
    name = "examples",
    srcs = glob(["test/daml/Examples.daml"]),
)

daml_compile(
    name = "examples-opt",
    srcs = glob(["test/daml/Examples.daml"]),
    run_optimizer = True,
)

genrule(
    name = "examples.pp",
    srcs = [
        ":examples.dar",
        "//compiler/damlc",
    ],
    outs = ["examples.dar.pp"],
    cmd = "$(location //compiler/damlc) inspect $(location :examples.dar) > $@",
)

genrule(
    name = "examples-opt.pp",
    srcs = [
        ":examples-opt.dar",
        "//compiler/damlc",
    ],
    outs = ["examples-opt.dar.pp"],
    cmd = "$(location //compiler/damlc) inspect $(location :examples-opt.dar) > $@",
)


daml_compile(
    name = "question",
    srcs = glob(["test/daml/Question.daml"]),
)
genrule(
    name = "question.pp",
    srcs = [
        ":question.dar",
        "//compiler/damlc",
    ],
    outs = ["question.dar.pp"],
    cmd = "$(location //compiler/damlc) inspect $(location :question.dar) > $@",
)
daml_compile(
    name = "question-opt",
    srcs = glob(["test/daml/Question.daml"]),
    run_optimizer = True,
)
genrule(
    name = "question-opt.pp",
    srcs = [
        ":question-opt.dar",
        "//compiler/damlc",
    ],
    outs = ["question-opt.dar.pp"],
    cmd = "$(location //compiler/damlc) inspect $(location :question-opt.dar) > $@",
)


da_haskell_test(
    name = "test",
    srcs = glob(["test/**/*.hs"]),
    data = [
        ":examples.dar",
    ],
    hackage_deps = [
        "base",
        "bytestring",
        "containers",
        "tasty",
        "tasty-hunit",
        "text",
        "filepath",
        "zip-archive",
    ],
    main_function = "DA.Daml.LF.Evaluator.Tests.main",
    src_strip_prefix = "test",
    visibility = ["//visibility:public"],
    deps = [
        "//compiler/daml-lf-ast",
        "//compiler/daml-lf-evaluator",
        "//compiler/daml-lf-optimize",
        "//compiler/daml-lf-reader",
        "//libs-haskell/bazel-runfiles",
    ],
)

da_haskell_binary(
    name = "Explore",
    srcs = glob(["exec/Explore.hs"]),
