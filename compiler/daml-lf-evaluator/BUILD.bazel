da_haskell_binary(
    name = "HaskellSpeed",
    srcs = glob(["exec/HaskellSpeed.hs"]),
    hackage_deps = [
        "base",
        "time",
    ],
    main_function = "HaskellSpeed.main",
    visibility = ["//visibility:public"],
